{
    "formatVersion": "2",
    "task": "Speech segmentation",
    "deployment": "development",
    "name": "WebMAUS-EN",
    "logo": "webmaus.png",
    "homepage": "https://clarin.phonetik.uni-muenchen.de/BASWebServices/interface/WebMAUSBasic",
    "location": "MÃ¼nchen, Germany",
    "creators": "Florian Schiel, Andreas Kipp, Thomas Kisler",
    "contact": {
        "person": "CLARIN-D Helpdesk",
        "email": "support@clarin-d.de"
    },
    "authentication": null,
    "description": "This web service calculates a phonetic segmentation and labeling for several languages based on the speech signal and the orthographic transcript. Text input is normalized and translated into a canonical phonological transcript encoded in SAM-PA using the BALLOON tool (which can be used in isolation using the G2P interface); the phonological transcript is then transformed into a probabilistic pronunciation graph which is time-aligned to the speech signal in the uploaded media file (which is passed through the service 'AudioEnhance' before alignment).",
    "inputs": [
        {
            "id": "speech",
            "name": "Speech",
            "mediatypes": [
                "audio/basic",
                "audio/flac",
                "audio/mpeg",
                "video/mp4",
                "audio/ogg",
                "audio/x-aiff",
                "audio/x-flac",
                "audio/x-wav",
                "audio/x-nist",
                "audio/x-sph",
                "video/x-msvideo",
                "video/x-flv"
            ]
        },
        {
            "id": "text",
            "name": "Text",
            "mediatypes": [
                "text/plain",
                "application/msword",
                "application/pdf",
                "application/rtf",
                "application/vnd.openxmlformats-officedocument.wordprocessingml.document",
                "application/vnd.oasis.opendocument.text"
            ],
            "languages": ["eng", "deu"]
        }
    ],
    "output": [],
    "webApplication": {
        "url": "https://localhost:8080/x",
        "queryParameters": [
            {"name": "wav", "bind": "speech/dataurl"},
            {"name": "text", "bind": "text/dataurl"},
            {"name": "language", "bind": "text/language"}
        ]
    }
}
